{
  "$schema": "http://json.schemastore.org/package",
  "name": "pepe-website",
  "version": "3.0.0",
  "description": "Pepe Emoji offers a powerful Discord bot to manage your server and unique Pepe emojis for you to use on Discord",
  "author": "almeidx <almeidx@pm.me> (https://almeidx.dev)",
  "license": "ISC",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "start": "next start",
    "prettier": "prettier --write **/*.{js,ts,tsx,json,yml,yaml,css,svg}"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/almeidx/pepe-website.git"
  },
  "bugs": {
    "url": "https://github.com/almeidx/pepe-website/issues"
  },
  "homepage": "https://pepe-is.life",
  "dependencies": {
    "@agney/react-loading": "^0.1.2",
    "@apollo/client": "^3.3.14",
    "axios": "^0.21.1",
    "chroma-js": "^2.1.1",
    "deepmerge": "^4.2.2",
    "graphql": "^15.5.0",
    "next": "10.0.7",
    "react": "17.0.1",
    "react-custom-scrollbars": "^4.2.1",
    "react-dom": "17.0.1",
    "react-icons": "^4.2.0",
    "react-select": "^4.3.0",
    "react-tooltip-lite": "^1.12.0",
    "react-visibility-sensor": "^5.1.1",
    "tslib": "^2.1.0"
  },
  "devDependencies": {
    "@types/chroma-js": "^2.1.3",
    "@types/node": "^14.14.33",
    "@types/react": "^17.0.2",
    "@types/react-custom-scrollbars": "^4.0.7",
    "@types/react-dom": "^17.0.1",
    "@types/react-select": "^4.0.14",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "discord-api-types": "^0.12.1",
    "eslint": "^7.7.0",
    "eslint-config-marine": "^8.1.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.2.1",
    "typescript": "4.1.5"
  },
  "eslintConfig": {
    "root": true,
    "extends": "marine/prettier/react",
    "parserOptions": {
      "project": "./tsconfig.eslint.json"
    },
    "plugins": [
      "simple-import-sort"
    ],
    "ignorePatterns": [
      ".next/*",
      ".vercel/*",
      ".yarn/*",
      "node_modules/*"
    ],
    "env": {
      "node": true
    },
    "globals": {
      "NodeJS": "readonly",
      "JSX": "readonly"
    },
    "rules": {
      "@typescript-eslint/indent": 0,
      "@typescript-eslint/naming-convention": [
        2,
        {
          "format": [
            "PascalCase",
            "UPPER_CASE",
            "camelCase"
          ],
          "leadingUnderscore": "allow",
          "selector": "variable"
        },
        {
          "format": [
            "PascalCase"
          ],
          "leadingUnderscore": "allow",
          "selector": "typeLike"
        },
        {
          "format": [
            "camelCase",
            "PascalCase"
          ],
          "leadingUnderscore": "allow",
          "selector": "function"
        }
      ],
      "@typescript-eslint/no-extraneous-class": 0,
      "@typescript-eslint/no-non-null-assertion": 0,
      "@typescript-eslint/space-before-function-paren": 0,
      "no-implicit-coercion": 0,
      "no-negated-condition": 0,
      "no-undef": 0,
      "no-unused-vars": 0,
      "prettier/prettier": [
        2,
        {
          "printWidth": 120,
          "useTabs": false,
          "tabWidth": 2,
          "singleQuote": true,
          "quoteProps": "as-needed",
          "trailingComma": "all",
          "endOfLine": "lf"
        }
      ],
      "react/jsx-filename-extension": [
        2,
        {
          "extensions": [
            ".tsx"
          ]
        }
      ],
      "react/react-in-jsx-scope": 0,
      "simple-import-sort/exports": 2,
      "simple-import-sort/imports": 2,
      "spaced-comment": [
        1,
        "always",
        {
          "line": {
            "markers": [
              "#region",
              "#endregion",
              "region",
              "endregion",
              "/"
            ]
          }
        }
      ],
      "sort-imports": 0,
      "sort-keys": 2,
      "sort-vars": 2
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "overrides": [
      {
        "files": "*.js",
        "rules": {
          "simple-import-sort/imports": 0
        }
      }
    ]
  },
  "prettier": {
    "printWidth": 120,
    "useTabs": false,
    "tabWidth": 2,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "all",
    "endOfLine": "lf"
  }
}
