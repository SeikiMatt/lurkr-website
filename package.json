{
  "$schema": "http://json.schemastore.org/package",
  "name": "pepe-website",
  "version": "3.0.0",
  "description": "The website for the Pepe Emoji Server and the Pepe Manager bot",
  "author": "almeidx <almeidx@pm.me> (https://almeidx.dev)",
  "license": "ISC",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "start": "next start",
    "prettier": "prettier --write **/*.{js,ts,tsx,json,yml,yaml,css,svg}"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/almeidx/pepe-website.git"
  },
  "bugs": {
    "url": "https://github.com/almeidx/pepe-website/issues"
  },
  "homepage": "https://pepe-is.life",
  "dependencies": {
    "@agney/react-loading": "^0.1.2",
    "axios": "^0.21.1",
    "next": "10.0.7",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-icons": "^4.2.0",
    "react-tooltip-lite": "^1.12.0",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.1.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "@vercel/node": "^1.8.5",
    "eslint": "^7.18.0",
    "eslint-config-marine": "^8.2.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.2.1",
    "typescript": "4.1.5"
  },
  "eslintConfig": {
    "root": true,
    "extends": "marine/prettier/react",
    "parserOptions": {
      "project": "./tsconfig.eslint.json"
    },
    "ignorePatterns": [
      "node_modules/*",
      ".vercel/*",
      ".next/*",
      ".yarn/*"
    ],
    "env": {
      "node": true
    },
    "globals": {
      "NodeJS": "readonly",
      "JSX": "readonly"
    },
    "rules": {
      "@typescript-eslint/naming-convention": [
        2,
        {
          "format": [
            "PascalCase",
            "UPPER_CASE",
            "camelCase"
          ],
          "leadingUnderscore": "allow",
          "selector": "variable"
        },
        {
          "format": [
            "PascalCase"
          ],
          "leadingUnderscore": "allow",
          "selector": "typeLike"
        },
        {
          "format": [
            "camelCase",
            "PascalCase"
          ],
          "leadingUnderscore": "allow",
          "selector": "function"
        }
      ],
      "@typescript-eslint/no-extraneous-class": 0,
      "@typescript-eslint/no-non-null-assertion": 0,
      "no-implicit-coercion": 0,
      "no-negated-condition": 0,
      "prettier/prettier": [
        2,
        {
          "printWidth": 120,
          "useTabs": false,
          "tabWidth": 2,
          "singleQuote": true,
          "quoteProps": "as-needed",
          "trailingComma": "all",
          "endOfLine": "lf"
        }
      ],
      "no-use-before-define": "off",
      "@typescript-eslint/no-use-before-define": 2,
      "react/prop-types": 0,
      "react/jsx-filename-extension": [
        2,
        {
          "extensions": [
            ".tsx"
          ]
        }
      ],
      "no-unused-vars": 0,
      "react/react-in-jsx-scope": 0,
      "no-redeclare": 0
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "prettier": {
    "printWidth": 120,
    "useTabs": false,
    "tabWidth": 2,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "all",
    "endOfLine": "lf"
  }
}
